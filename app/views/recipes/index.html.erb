<p id="notice"><%= notice %></p>

<h1>Yummy Recipes</h1>

<table cellspacing="100">
  
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= image_tag(recipe.picture_url, :width => 200) if recipe.picture.present? %></td>
        <td width=100></td>
        <td><h3 align="center"><%= recipe.name %></h2></td>
        <td width=100></td>
        <td><%= link_to 'Show Instructions', recipe %></td> <td> | </td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td> <td> | </td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr> <tr><td colspan=3 height=10></td></tr>
    <% end %>
  </tbody>
</table>

<br>

